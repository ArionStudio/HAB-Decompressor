<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<VBox
        prefWidth="1360" prefHeight="720" spacing="20.0"
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="huffman.decompressor.hab.gui.ErrorSceneController"
        stylesheets="@styles/main.css"
>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="welcomeText" text="HAB Decompressor" styleClass="main-title" prefHeight="20.0"/>
    <VBox alignment="CENTER" prefWidth="1360" prefHeight="700" spacing="20.0">
        <VBox   alignment="CENTER" prefWidth="440">
            <Label fx:id="error" alignment="TOP_LEFT" prefHeight="20.0" prefWidth="260.0" text="ERROR!"/>
            <Label fx:id="errorCode" prefHeight="18.0" prefWidth="260.0" text="Error code: " />
            <Label fx:id="errorMessage" prefHeight="18.0" prefWidth="260.0" text="Error message: " />
        </VBox>

        <Button onAction="#setToPrimaryScene" text="Back" />
    </VBox>

</VBox>
