<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<VBox
        prefWidth="1360" prefHeight="720" spacing="20.0"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="huffman.decompressor.hab.gui.GetInfoSceneController"
        stylesheets="@styles/main.css"
>
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>
   <Label fx:id="welcomeText" text="HAB Decompressor" styleClass="main-title" prefHeight="20.0"/>
   <VBox fillWidth="800"  spacing="8.0">
      <Label fx:id="filePath" prefHeight="18.0" text="File path:" />
      <Label fx:id="compressed" graphicTextGap="2.0" prefHeight="18.0" prefWidth="697.0" text="Compressed: "/>
      <Label fx:id="encrypted" graphicTextGap="2.0" prefHeight="18.0" prefWidth="687.0" text="Encrypted: " />
      <Label fx:id="fileSize" graphicTextGap="2.0" prefHeight="18.0" prefWidth="687.0" text="Encrypted: " />
      <Pane prefHeight="186.0" prefWidth="676.0">
         <TextField fx:id="passInput" layoutY="122.0" prefHeight="18.0" prefWidth="200"/>
         <Button fx:id="toDecompress" layoutX="240" layoutY="122.0" mnemonicParsing="false"
                 onAction="#switchToFinalScene" text="Decompress"/>
         <Button fx:id="toDecrypt" layoutX="240" layoutY="122.0" mnemonicParsing="false"
                 onAction="#switchToFinalScene" text="Decrypt"/>
         <Label fx:id="outfile" layoutY="24.0" prefHeight="17.0" prefWidth="554.0"
                text="Outfile: [.decompressed/result.txt]"/>
         <Label fx:id="status" layoutY="50.0" prefHeight="17.0" prefWidth="554.0"/>
      </Pane>
      <Button onAction="#setToPrimaryScene" text="Back" />
   </VBox>
</VBox>
